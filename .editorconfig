# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 80

[*.{c,h,cpp,hpp}]
indent_size = 2

[*.{py,php,sh}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[lib/**.js]
indent_style = space
indent_size = 2

[{package.json,.travis.yml,md}]
indent_style = space
indent_size = 2
